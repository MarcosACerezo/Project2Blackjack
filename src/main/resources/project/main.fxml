               <children>
                  <Label text="Player Hand">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Value: " />
                  <Label fx:id="playerHandLbl" text="0" />
               </children>
            </HBox>
