                  <Label fx:id="playerWinsLbl" prefHeight="27.0" prefWidth="221.0" stylesheets="@style.css" text="Player Wins: 0" />
                  <Label fx:id="dealerWinsLbl" prefHeight="27.0" prefWidth="208.0" stylesheets="@style.css" text="Dealer Wins: 0" />
