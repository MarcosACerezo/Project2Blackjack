                  <Button fx:id="hitButton" mnemonicParsing="false" onAction="#hit" text="Hit">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="playButton" mnemonicParsing="false" onAction="#startGame" text="Play">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="standButton" mnemonicParsing="false" onAction="#stand" text="Stand">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="98.0" prefWidth="175.0">
               <children>
                  <Label fx:id="winLabel" prefHeight="27.0" prefWidth="185.0" text="label">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
         </children>
      </HBox>
